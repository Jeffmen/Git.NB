<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg_frame"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/me_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:ellipsize="end"
        android:fitsSystemWindows="true"
        fresco:layout_collapseParallaxMultiplier="0.6"
        fresco:layout_collapseMode="parallax"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/ic_git_gray_240"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/me_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        fresco:actualImageScaleType="focusCrop"
        fresco:roundingBorderWidth="2dp"
        fresco:roundingBorderColor="@android:color/white"
        fresco:roundAsCircle="true"
        fresco:placeholderImage="@drawable/ic_git_gray_240"/>
    <TextView
        android:id="@+id/me_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
</FrameLayout>
